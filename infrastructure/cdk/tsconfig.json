{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "lib": ["ES2021", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "."
    },
    "include": ["lib/**/*.ts", "bin/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  